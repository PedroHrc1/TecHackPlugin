{
  "manifest_version": 2,
  "name": "Detector de Ameaças ao Navegador",
  "version": "1.1",
  "description": "Detecta conexões a domínios de terceiros e potenciais ameaças de sequestro de navegador.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Detector de Ameaças",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ]
}
